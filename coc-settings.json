{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "snippets.loadFromExtensions": false,
  "explorer.width": 30,
  "explorer.previewAction.onHover": false,
  "explorer.sources": [
    {
	  "name": "bookmark",
	  "expand": false
    },
    {
	  "name": "buffer",
	  "expand": true
    },
    {
      "name": "file",
	  "expand": true
    }
  ],
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit",
    "s": "open:split"
  }
}
